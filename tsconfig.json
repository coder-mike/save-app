{
  "compilerOptions": {
    "module": "none",
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "outFile": "public/script.js"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}