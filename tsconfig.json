{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "esModuleInterop": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"]
}